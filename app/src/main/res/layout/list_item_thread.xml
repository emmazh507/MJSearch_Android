<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="60dp">

             <TextView
                 android:id="@+id/thread_post_date"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerVertical="true"
                 android:layout_toLeftOf="@+id/thread_company"
                 android:layout_alignParentLeft="true"
                 android:layout_marginLeft="@dimen/spacing_xsmall"
                 android:textColor="#cc000000"
                 android:textSize="10sp"
                 tools:text="company"/>

             <TextView
                 android:id="@+id/thread_company"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerVertical="true"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="@dimen/spacing_large"
                 tools:text="postdate" />

            <TextView
                android:id="@+id/thread_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_below="@+id/thread_company"
                android:drawableLeft="@drawable/thread_mark"
                android:textColor="#cc000000"
                android:textSize="10sp"
                tools:text="Thread title" />

    </RelativeLayout>

    <View
        android:id="@+id/thread_clickable_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"/>


</LinearLayout>


<!--/android.support.v7.widget.View-->